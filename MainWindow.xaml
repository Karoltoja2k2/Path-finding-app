<Window x:Class="Path_finding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Path_finding"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="MainWindow" Height="720" Width="1280">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="dijkstraButton" Click="Dijkstra_Alg" Content="Visualise Dijkstra algorithm" Width="200" Margin="5"/>
            <Slider Minimum="1" Maximum="100" Name="speedSlider" Width="200" Margin="5" ValueChanged="Slider_ValueChanged"/>
        </StackPanel>
        <Grid HorizontalAlignment="Center" Name="grid" Height="Auto" Width="Auto">

        </Grid>
    </StackPanel>
</Window>
